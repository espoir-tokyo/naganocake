<%= render 'layouts/admins' %>
<div class="container">
  <h2>注文履歴一覧</h2><br>
	<table class="table table-hover table-inverse">
	  <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
    <% @orders.each do |order| %>
    <tr>
      <td><%= link_to order[:created_at].strftime("%Y/%m/%d %H:%M:%S"), admins_order_path(order) %></td>
      <td><%= order.customer.surname + order.customer.first_name %></td>
      <td><%= order.order_items.sum(:quantity) %></td>
      <td>
          <% if order.order_status == 0 %>入金待ち
          <% elsif order.order_status == 1 %>入金確認
          <% elsif order.order_status == 2 %>製作中
          <% elsif order.order_status == 3 %>発送準備中
          <% elsif order.order_status == 4 %>発送済み
          <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
