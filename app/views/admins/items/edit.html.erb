<div class="container">
	<div class="row">
		<h2 class="product_newly_registration_headline">商品編集</h2>
		<div class="col-xs-4">
			<%= form_for(@item, url: admins_item_path, html: {method: 'PATCH'}) do |f| %>
				<!-- エラーメッセージ表示-->
				<% if @item.errors.any? %>
					<h3><%= @item.errors.count %>error occurrence</h3><!--エラーメッセ-->
					<ul>
						<% @item.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				<% end %>
				<!-- エラーメッセージ表示-->
			    <%= attachment_image_tag @item, :image, :fill, 300, 200, format: 'jpeg', class: "img-thumbnail items-image", fallback: "no_image.jpg", size:'300x200' %>
			    <%= f.attachment_field :image %>
		</div>
		<!-- <div class="col-xs-1"></div> -->
		<div class="col-xs-5">
			    <div class="items-list">
			    	<%= f.label :商品名 %>
			    	<%= f.text_field :name, autofocus: true %>
			    </div>
			    <div class="items-list">
			    	<%= f.label :商品説明 %>
			    	<%= f.text_area :description, autofocus: true %>
			    </div>
			    <div class="items-list">
			    	<%= f.label :ジャンル %>
			    	<div class="btn-group">
						<button type="button" class="btn btn-default">
							--選択して下さい--
						</button>
						<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu" role="menu">
							<li role="presentation"><a role="menuitem" tabindex="-1" href="#">リンクのリスト１</a></li>
							<li role="presentation"><a role="menuitem" tabindex="-1" href="#">リンクのリスト２</a></li>
							<li role="presentation"><a role="menuitem" tabindex="-1" href="#">リンクのリスト３</a></li>
						</ul>
					</div>
			    </div>
			    <div class="items-list">
			    	<%= f.label :税抜価格 %>
			    	<%= f.text_field :price, autofocus: true %>円
			    </div>
			    <div class="items-list">
			    	<%= f.label :販売ステータス %>
			    	<div class="btn-group">
						<button type="button" class="btn btn-default">
							--選択して下さい--
						</button>
						<button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu" role="menu">
							<li role="presentation"><a role="menuitem" tabindex="-1" href="#">販売中</a></li>
							<li role="presentation"><a role="menuitem" tabindex="-1" href="#">売り切れ</a></li>
						</ul>
					</div>
			    </div>
		</div>
		<!-- <div class="col-xs-4"></div> -->
	</div>
	<div class="row">
		<div class="col-xs-8"></div>
		  <div class="col-xs-3 items-submit">
			    <%= f.submit '変更を保存', class: 'btn btn-large btn-primary btn-block items-button' %>
			<% end %>
		  </div>
	</div>
</div>