<%= render 'layouts/admins' %>

	<%= form_for(@item, url: admins_item_path, html: {method: 'PATCH'}) do |f| %>
	<div class="row">
		<div class="col-xs-offset-1 col-xs-10">
			<h2 class="product_newly_registration_headline">商品編集</h2>
			<div class="col-xs-4">
					<!-- エラーメッセージ表示-->
<!-- 					<% if @item.errors.any? %>
						<h3><%= @item.errors.count %>error occurrence</h3>
						<ul>
							<% @item.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
					<% end %> -->
					<!-- エラーメッセージ表示-->
			   		 <%= attachment_image_tag @item, :image, :fill, 300, 200, format: 'jpeg', class: "img-thumbnail items-image", fallback: "no_image.jpg", size:'300x200' %>
			   		 <%= f.attachment_field :image %>
			</div>
			<!-- <div class="col-xs-1"></div> -->
			<div class="col-xs-6">
			    <div class="row item-th">
			    	<p class="col-xs-4"><%= f.label :商品名 %></p>
			    	<p class="col-xs-6"><%= f.text_field :name, autofocus: true %></p>
			    </div>
			    <div class="row item-th">
			    	<p class="col-xs-4"><%= f.label :商品説明 %></p>
			    	<p class="col-xs-8"><%= f.text_area :description, autofocus: true %></p>
			    </div>
			    <div class="row item-th">
			    	<p class="col-xs-4"><%= f.label :ジャンル %></p>
			    	<p class="col-xs-6"><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %></p>
			    </div>
			    <div class="row item-th">
			    	<p class="col-xs-4"><%= f.label :税抜価格 %></p>
			    	<p class="col-xs-6"><%= f.text_field :price, autofocus: true %>円</p>
			    </div>
			    <div class="row item-th">
			    	<p class="col-xs-4"><%= f.label :販売ステータス %></p>
			    	<p class="col-xs-6"><%= f.select :sale_status, [["販売中", "true"], ["販売停止中", "false"]], include_blank: "--選択して下さい--" %></p>
			    </div>
			</div>
		</div>
	<div class="row">
		<div class="col-xs-offset-1 col-xs-8"></div>
		  <div class="col-xs-3 items-submit">
			    <%= f.submit '変更を保存', class: 'btn btn-primary btn-lg' %>
		  </div>
	</div>
	<% end %>