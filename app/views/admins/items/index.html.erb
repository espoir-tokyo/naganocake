<%= render 'layouts/admins' %>

	<div class="row">
		<div class="col-xs-10">
			<h2 class="">商品一覧</h2>
			<table class="table">
				<thead>
					<tr>
						<th class="th1">商品ID</th>
						<th class="th2">商品名</th>
						<th class="th3">税抜き価格</th>
						<th class="th4">ジャンル</th>
						<th class="th5">ステータス</th>
					</tr>
				</thead>
				<% @items.each do |item| %>
				    <tbody>
				    	<tr>
				    		<td><%= item.id %></td>
				    		<td><%= link_to admins_item_path(item) do %>
				    			    <%= item.name %>
				    			<% end %>
				    		</td>
				    		<td><%= to_yen(item.price) %></td>
				    		<td><%= item.genre_id %></td>
				    		<td><%= display(item.sale_status) %></td>
				    	</tr>
				    </tbody>
				<% end %>
			</table>
		</div>
	</div>