<%= render 'layouts/admins' %>

	<div class="row">
		<h2 class="">商品詳細</h2>
		<div class="col-xs-4">
			<%= attachment_image_tag @item, :image, :fill, 300, 200, format: 'jpeg', class: "img-thumbnail items-image", fallback: "no_image.jpg", size:'300x200' %>
		</div>
		<div class="col-xs-5 item-">
			<div class="items-list">商品名　<%= @item.name %></div>
			<div class="items-list">商品説明　<%= @item.description %></div>
			<div class="items-list">税込価格（税抜き価格） <%= to_yen(@item.price) %>（<%= addTax(@item.price,1.1)%>）</div>
			<div class="items-list">販売ステータス　<%= display(@item.sale_status) %></div>
		</div>
	</div>
	<div class="col-xs-8"></div>
	<div class="col-xs-3">
		<%= link_to '編集', edit_admins_item_path(@item), class: 'btn btn-large btn-primary btn-block items-button'%>
	</div>

<%= render 'layouts/footer' %>