<%= render 'layouts/admins' %>

	<div class="row">
		<div class="col-xs-offset-1 col-xs-10">
			<h2 class="">商品詳細</h2>
			<div class="col-xs-4">
				<%= attachment_image_tag @item, :image, :fill, 300, 200, format: 'jpeg', class: "img-thumbnail item-image", fallback: "no_image.jpg", size:'300x200' %>
			</div>
			<div class="col-xs-5">
				<div class="item-th col-xs-5">商品名</div>
				    <div class="item-td col-xs-5"><%= @item.name %></div>
				<div class="item-th col-xs-5">商品説明</div>
				    <div class="item-td col-xs-5"><%= @item.description %></div>
				<div class="item-th col-xs-5">税込価格(税抜価格)</div>
				    <div class="item-td col-xs-5"><%= @item.price_with_tax %>(<%= @item.price %>)円</div>
				<div class="item-th col-xs-5">販売ステータス</div>
				    <div class="item-td col-xs-5"><%= display(@item.sale_status) %></div>
			</div>
		    <div class="row">
				<div class="col-xs-offset-8 col-xs-3">
					<%= link_to '編集する', edit_admins_item_path(@item), class: 'btn btn-primary btn-lg'%>
				</div>
			</div>
		</div>
	</div>
