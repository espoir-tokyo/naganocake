<div class="container">
	<div class="row">
		<h2 class="product_newly_registration_headline">商品新規登録</h2>
		<div class="col-xs-4">
			<%= form_for(@item, url: admins_items_path, html: {method: 'POST'}) do |f| %>
				<!-- エラーメッセージ表示-->
				<% if @item.errors.any? %>
					<h3><%= @item.errors.count %>error occurrence</h3><!--エラーメッセ-->
					<ul>
						<% @item.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				<% end %>
				<!-- エラーメッセージ表示-->
			    <%= attachment_image_tag @item, :image, :fill, 300, 200, format: 'jpeg', class: "img-thumbnail items-image", fallback: "no_image.jpg", size:'300x200' %>
			    <%= f.attachment_field :image %>
		</div>
		<!-- <div class="col-xs-1"></div> -->
		<div class="col-xs-5">
			    <div class="items-list">
			    	<%= f.label :商品名 %>
			    	<%= f.text_field :name, autofocus: true %>
			    </div>
			    <div class="items-list">
			    	<%= f.label :商品説明 %>
			    	<%= f.text_area :description, autofocus: true %>
			    </div>
			    <div class="items-list">
			    	<%= f.label :ジャンル %>
			    	<%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
			    </div>
			    <div class="items-list">
			    	<%= f.label :税抜価格 %>
			    	<%= f.text_field :price, autofocus: true %>円
			    </div>  <!-- integerの時のフォームって何だろう？ -->
			    <div class="items-list">
			    	<%= f.label :販売ステータス %>
			    	<%= f.select :sale_status, [["販売中", "true"], ["売切れ", "false"]], include_blank: "--選択して下さい--" %>
			    </div>
		</div>
	</div>
	<div class="row">
		<div class="col-xs-8"></div>
		  <div class="col-xs-3 items-submit">
			    <%= f.submit '新規登録', class: 'btn btn-large btn-primary btn-block items-button' %>
			<% end %>
		  </div>
	</div>
</div>