
<%= render 'layouts/admins' %>

<div class="container">
  <div class="row">
    <h2>管理者ログイン</h2>
    <div class="col-md-4 col-md-offset-4">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :メールアドレス, class: "col-sm-5 control-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :size=>"50" %>
          </div>

          <div class="form-group">
            <%= f.label :パスワード, class: "col-sm-5 control-label" %><br />
            <%= f.password_field :password, autocomplete: "current-password", :size=>"50" %>
          </div>

          <div class="actions text-center">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>

    </div>
  </div>
</div>
