<%= render 'layouts/admins' %>

	<div class="row genre-new">
		<h2 class="col-xs-offset-2">ジャンル編集</h2>
		<%= form_for(@genre, url: admins_genre_path, html: {method: 'PATCH'}) do |f|  %>
		<div class="col-xs-offset-2 col-xs-7">
			<div class="col-xs-5">
			    <%= f.label :ジャンル %>
			    <%= f.text_field :name, autofocus: true %>
			</div>
			<div class="col-xs-3">
			    <%= f.radio_button :flag, :true %>有効
                <%= f.radio_button :flag, :false %>無効
            </div>
            <div class="col-xs-3">
                <%= f.submit '変更を保存する', class: 'btn btn-large btn-primary btn-block items-button' %>
            </div>
        </div>
        <% end %>
    </div>