<%= render 'layouts/admins' %>

	<h2>ジャンル一覧・追加</h2>
	<div class="row genre-new">
		<div class="col-xs-5">
			<div class="col-xs-8">
			<%= form_for(@genre, url: admins_genres_path, html: {method: 'POST'}) do |f|  %>
			    <%= f.label :ジャンル %>
			    <%= f.text_field :name, autofocus: true%>
			</div>
			<div class="col-xs-4">
			    <%= f.radio_button :flag, :true %>有効
                <%= f.radio_button :flag, :false %>無効
            </div>
        </div>
        <div class="col-xs-2">
                <%= f.submit '追加', class: 'btn btn-primary' %>
            <% end %>
        </div>
    </div>
    <div class="row">
    	<div class="col-xs-6">
    		<table class="table">
    			<thead>
    				<tr>
    					<th class="th1">ジャンル</th>
    					<th class="th2">状態</th>
    					<th class="th3"></th>
    				</tr>
    			</thead>
    			<% @genres.each do |genre| %>
    				<tbody>
    					<tr>
    						<td><%= genre.name %></td>
    						<td><%= display(genre.flag) %></td>
    						<td><%= link_to '編集', edit_admins_genre_path(genre), class: 'btn btn-primary btn-sm' %></td>
    					</tr>
    				</tbody>
    			<% end %>
    		</table>
    	</div>
    </div>