<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar  navbar-default">
      <div class="container-fluid">
        <nav class='nav navbar-nav navbar-left' >
          <h1>Naganocake</h1>
        </nav>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <% if customer_signed_in? %>
                 <p class="navbar-text">ようこそ <%= current_customer.surname %> さん !</p>
                <li><%= link_to ' マイページ',customers_profile_path,class: 'glyphicon glyphicon-home home' %></li>
                <li><%= link_to ' 商品一覧',customers_items_path,class: 'glyphicon glyphicon-cutlery' %></li>
                <li><%= link_to ' カート',customers_cart_items_path ,class: 'glyphicon glyphicon-shopping-cart'%></li>
                <li><%= link_to ' ログアウト', destroy_customer_session_path, method: :delete,class: 'glyphicon glyphicon-log-out logout' %></li>
              <% else %>
               <p class="navbar-text">ようこそ ゲスト さん !</p>
                <li><%= link_to ' About',about_path,class: 'glyphicon glyphicon-cutlery' %></li>
                <li><%= link_to ' 商品一覧',customers_items_path,class: 'glyphicon glyphicon-cutlery' %></li>
                <li><%= link_to ' 新規登録',new_customer_registration_path,class: 'glyphicon glyphicon-edit' %></li>
                <li><%= link_to ' ログイン', new_customer_session_path,class: 'glyphicon glyphicon-log-in' %></li>
              <% end %>
            </ul>
          </nav>
      </div>
    </header>
      <div class='container'>

        <p id="notice"><%= notice %></p>

        <%= yield %>
      </div>

  </body>
</html>
