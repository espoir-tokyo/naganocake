<%= render 'layouts/customers' %>

<div class="row">

<div class="col-xs-3">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>ジャンル検索</th>
			</tr>
		</thead>
		<tbody>
				<% @genres.each do |genre| %>
    			<tr><td><%= link_to genre.name, "/customers/genres/#{genre.id}" %></td></tr>
				<% end %>
		</tbody>
	</table>
</div>


<div class="col-xs-9">

<h2><%= @genre.name %>一覧</h2>
<p>（全<%= @items.count %>件）</p>

<div>
<% @items.each do |item| %>
	<div class="item-genre pull-left col-xs-3">
	<%= link_to customers_path(item.id) do %>
  	<%= attachment_image_tag(item, :image, :fill, 180, 120) %><br>
  	<% end %>
    <%= item.name %><br>
    <%= item.price_with_tax %>円<br>
	</div>
<% end %>
</div>
<%= paginate @items %>
</div>
</div>

<%= render 'layouts/footer' %>
