<%= render 'layouts/customers' %>
<div class="row">
	<div class="col-xs-3">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th>ジャンル検索</th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
    				<tr><td><%= link_to genre.name, "/customers/genres/#{genre.id}" %></td></tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div class="col-xs-9 yohaku">

		<div class="col-xs-5">
			<%= attachment_image_tag(@item, :image, :fill, 300, 200) %>
		</div>

		<div class="col-xs-7 item-description">
			<div>
    			<div class="item-name"><%= @item.name %></div>
    			<div class="item-description"><%= @item.description %></div>
    			<div class="item-price">￥<%= @item.price_with_tax %>（税込）</div>
        	<%= form_for(@cart_item, url: customers_cart_items_path, html: {method: 'POST'}) do |f| %>
        		<%= f.hidden_field :item_id, value: @item.id %>
        		<%= f.number_field :quantity , placeholder: "個数選択", min: 1, max: 10, class: 'input-mysize' %>
        		<%= f.submit "カートに入れる" ,class: 'btn btn-primary' %>
        	<% end %>
        	</div>
		</div>
	</div>
</div>

<%= render 'layouts/footer' %>