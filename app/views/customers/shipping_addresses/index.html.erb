<%= render 'layouts/customers' %>

<div class="container">
    <div class="row">
    <h3>配送先登録/一覧</h3>
      <%= form_for(@shipping_address, url: 'shipping_addresses') do |f| %>
	   
	    <div class="field form-group">
			<%= f.label :郵便番号ハイフンなし %>
			<%= f.text_field :postal_code %>
		</div>

	    <div class="field form-group">
			<%= f.label :住所 %>
			<%= f.text_field :address %>
		</div>

	    <div class="field form-group">
			<%= f.label :宛名 %>
			<%= f.text_field :name %>
		</div>

		<div class="actions row">
			<%= f.submit class: "btn btn-primary col-xs-3" %>
		</div>
      <% end %>
    </div>
</div>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @shipping_addresses.each do |shipping_address| %>
		<tr>
			<td>
				<%= shipping_address.postal_code %>
			</td>
			<td>
				<%= shipping_address.address %>
			</td>
			<td>
				<%= shipping_address.name %>
			</td>
			<td><%= link_to "編集する", edit_customers_shipping_address_path(shipping_address) %>
			</td>
			<td>
			    <%= link_to "削除する",customers_shipping_address_path(shipping_address), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>