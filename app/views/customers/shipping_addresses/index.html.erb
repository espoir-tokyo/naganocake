<%= render 'layouts/customers' %>

<div class="container">
  <div class="col-xs-11">
    <div class="row">
    <h3>配送先登録/一覧</h3>
      <%= form_for(@shipping_address, url: 'shipping_addresses') do |f| %>
		<ul>
			<li>
		        <div class="field form-group">
				<W><%= f.label :郵便番号（ハイフンなし） %></W>
				<%= f.text_field :postal_code %>
			</div>
	        </li>
	        <li>
		    <div class="field form-group">
				<W><%= f.label :住所 %></W>
				<%= f.text_field :address,:size => "50*30" %>
			</div>
	        </li>
	        <li>
		    <div class="field form-group">
				<W><%= f.label :宛名 %></W>
				<%= f.text_field :name %>
				<%= f.submit "登録する",  class:"btn btn-success btn-sm col-xs-offset-7 col-xs-2" %>
			</div>
		    </li>
	    </ul>
      <% end %>
    </div>
 </div>
</div>
<div class="col-xs-8">
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>郵便番号</th>
				<th>住所</th>
				<th>宛名</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @shipping_addresses.each do |shipping_address| %>
			<tr>
				<td>
					<%= shipping_address.postal_code %>
				</td>
				<td>
					<%= shipping_address.address %>
				</td>
				<td>
					<%= shipping_address.name %>
				</td>
				<td><%= link_to "編集する", edit_customers_shipping_address_path(shipping_address),class: "btn btn-primary btn-sm"  %>
				    <%= link_to "削除する",customers_shipping_address_path(shipping_address),class: "btn btn-danger btn-sm" , method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>