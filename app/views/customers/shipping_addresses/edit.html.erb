<%= render 'layouts/customers' %>

<div class="container">
  <div class="col-xs-offset-1 col-xs-11">
     <div class="row">
	    <h3>配送先編集</h3>
	      <%= form_for(@shipping_address, url: "/customers/shipping_addresses/#{@shipping_address.id}") do |f| %>
		    <ul>
			    <li>
			    <div class="field form-group">
					<W><%= f.label :郵便番号（ハイフンなし） %></W>
					<%= f.text_field :postal_code %>
				</div>
		        </li>
		        <li>
			    <div class="field form-group">
					<W><%= f.label :住所 %></W>
					<%= f.text_field :address,:size => "50*30" %>
				</div>
		        </li>
		        <li>
			    <div class="field form-group">
					<W><%= f.label :宛名 %></W>
					<%= f.text_field :name %>
				</div>
		        </li>
		    </ul>
			<div class="actions row">
				<%= f.submit"編集する", class: "btn btn-primary col-xs-offset-7 col-xs-2" %>
			</div>
	      <% end %>
     </div>
  </div>
</div>