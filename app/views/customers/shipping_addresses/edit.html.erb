<div class="container">
    <div class="row">
    <h3>配送先登録/一覧</h3>
      <%= form_for(@shipping_address, url: "/customers/shipping_addresses/#{@shipping_address.id}") do |f| %>
	   
	    <div class="field form-group">
			<%= f.label :郵便番号ハイフンなし %>
			<%= f.text_field :postal_code %>
		</div>

	    <div class="field form-group">
			<%= f.label :住所 %>
			<%= f.text_field :address %>
		</div>

	    <div class="field form-group">
			<%= f.label :宛名 %>
			<%= f.text_field :name %>
		</div>

		<div class="actions row">
			<%= f.submit class: "btn btn-primary col-xs-3" %>
		</div>
      <% end %>
    </div>
</div>