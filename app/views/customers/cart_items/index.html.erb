<div class="container">
  <div class="row">
    <div class="col-xs-7">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-xs-2">
      <div>
        <%= link_to "カートを空にする", "/customers/cart_items", method: :delete, class:"btn btn-danger" %>
        </div>
    </div>
  </div>
  <div class="row">
    <h4><%= notice %></h4>
	  <table class="table-bordered">
      <tr>
        <th style="width:300px;">商品名</th>
        <th style="width:120px; height:50px">単価（税込）</th>
        <th style="width:120px; height:50px">数量</th>
        <th style="width:120px; height:50px">小計</th>
        <th style="width:120px; height:50px"></th>
      </tr>

      <% current_customer.cart_items.each do |cart_item| %>
      <tr>
        <td>
          <%= link_to customers_path(cart_item.item_id) do %>
            <%= attachment_image_tag(@item, :image, :fill, 50, 50) %>
            <%= cart_item.item.name %>
          <% end %>
        </td>
        <td><%= cart_item.item.price %></td>
        <td>
            <%= form_for(cart_item, url: "/customers/cart_items/#{cart_item.id}", html: {method: 'PATCH'}) do |f| %>
            <%= f.hidden_field :cart_item_id, value: cart_item.id %>
            <%= f.number_field :quantity, min:1, max: 10, value: cart_item.quantity%>
            <%= f.submit "変更" ,class:"btn btn-primary btn-xs" %>
            <% end %>
        </td>
        <td>
          <%= cart_item.item.price * cart_item.quantity %>
        </td>
        <td><div style="margin-left:50px;">
          <%= link_to "削除する", "/customers/cart_items/#{cart_item.id}", method: :delete, class:"btn btn-danger" %>
            </div>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  <div class="row">
    <div class="col-xs-9">
      <div style="margin-top:50px;"><%= link_to "買い物を続ける", customers_items_path, class:"btn btn-primary" %></div>
    </div>
    <div class="col-xs-3">
      <table class="table-bordered">
        <tr>
          <th style="width:120px; height:50px">合計金額</th>
          <td style="width:120px; height:50px"><%= @total %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-4"></div>
    <div class="col-xs-4">
      <%= link_to "情報入力に進む", new_customers_order_path, class: "btn btn-success btn-lg" %>
    </div>
    <div class="col-xs-4"></div>
  </div>

</div>