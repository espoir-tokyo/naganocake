<%= render 'layouts/customers' %>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-1">
      <h2>ショッピングカート</h2>
    </div>
    <div class="col-xs-2 all_delete-btn">
      <div>
        <%= link_to "カートを空にする", "/customers/cart_items", method: :delete, class:"btn btn-danger" %>
        </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
    <h4><%= notice %></h4>
	  <table class="table-bordered">
      <tr bgcolor="#EEEEEE">
        <th style="width:300px; height:60px; padding-left:5px">商品名</th>
        <th style="width:130px; padding-left:5px">単価（税込）</th>
        <th style="width:130px; padding-left:5px">数量</th>
        <th style="width:130px; padding-left:5px">小計</th>
        <th style="width:130px"></th>
      </tr>

      <% current_customer.cart_items.each do |cart_item| %>
      <tr>
        <td style="height:70px; padding-left:5px">
          <%= link_to customers_path(cart_item.item_id) do %>
            <%= attachment_image_tag(cart_item.item, :image, :fill, 50, 50) %>
            <%= cart_item.item.name %>
          <% end %>
        </td>
        <td style="padding-left:5px"><%= cart_item.item.price_with_tax %>円</td>
        <td style="padding-left:5px">
            <%= form_for(cart_item, url: "/customers/cart_items/#{cart_item.id}", html: {method: 'PATCH'}) do |f| %>
            <%= f.hidden_field :cart_item_id, value: cart_item.id %>
            <%= f.number_field :quantity, min:1, max: 10, value: cart_item.quantity%>
            <%= f.submit "変更" ,class:"btn btn-primary btn-xs" %>
            <% end %>
        </td>
        <td style="padding-left:5px">
          <%= cart_item.item.price_with_tax * cart_item.quantity %>円
        </td>
        <td style="padding-left:5px">
          <div style="margin-left:25px;">
            <%= link_to "削除する", "/customers/cart_items/#{cart_item.id}", method: :delete, class:"btn btn-danger delete-btn" %>
          </div>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-xs-offset-1">
      <div style="margin-top:50px;"><%= link_to "買い物を続ける", customers_items_path, class:"btn btn-primary" %></div>
    </div>
    <div class="col-xs-3", style="margin-top:45px">
      <table class="table-bordered">
        <tr>
          <th style="width:120px; height:50px">合計金額</th>
          <td style="width:120px; height:50px"><%= @total %>円</td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-5 col-xs-offset-4", style="margin-top:40px">
      <%= link_to "情報入力に進む", new_customers_order_path, class: "btn btn-success next-btn" %>
    </div>
  </div>

<%= render 'layouts/footer' %>