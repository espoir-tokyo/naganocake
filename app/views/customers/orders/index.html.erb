<%= render 'layouts/customers' %>
<h3>注文履歴一覧</h3>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td>
             	<%= order.created_at.strftime('%Y/%m/%d') %>
			</td>
			<td>
				<%= order.ship_postal_code %><br>
				<%= order.ship_address %><br>
				<%= order.ship_name %>
			</td>
			<td>
				<% order.order_items.each do |item| %>
					<%= item.item.name %><br>
				<% end %>

			</td>
			<td>
				<%= order.bill %>
			</td>
			<td>
			    <% if order.order_status == 0 then %>
			    入金待ち
			    <% elsif order.order_status == 1 then %>
			    入金確認
			    <% elsif order.order_status == 2 then %>
			    製作中
			    <% elsif order.order_status == 3 then %>
			    発送準備中
			    <% elsif order.order_status == 4 then %>
			    発送済み
			    <% else %>
				<% end %>
			</td>
			<td>
				<%= link_to "表示する", customers_order_path(order.id), class: "btn btn-primary" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
<%= paginate @orders %>