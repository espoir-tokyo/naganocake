<h3>注文履歴一覧</h3>

<table class="table table-bordered">
	<thead>
		<tr>
			<th>注文日</th>
			<th>配送先</th>
			<th>注文商品</th>
			<th>支払金額</th>
			<th>ステータス</th>
			<th>注文詳細</th>
		</tr>
	</thead>
	<tbody>
		<% @order.each do |order| %>
		<tr>
			<td>
              <%= customer.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
			</td>
			<td>
				<%= order.postal_code %>
				<%= order.address %>
				<%= order.name %>
			</td>
			<td>
				<%= order.item %>
			</td>
			<td>
				<%= order.bill %>
			</td>
			<td>
			    <%= order.status %>
			</td>
			<td>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>