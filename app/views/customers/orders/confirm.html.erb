<%= render 'layouts/customers' %>
  <div class="row">
    <div class="col-xs-7 col-xs-offset-1">
    	<h2 class="confirm-headline">注文情報確認</h2>
		<table class="table-bordered">
	      <tr bgcolor="#EEEEEE">
	        <th style="width:300px; height:70px; padding-left:5px">商品名</th>
	        <th style="width:120px; padding-left:5px">単価（税込）</th>
	        <th style="width:120px; padding-left:5px">数量</th>
	        <th style="width:120px; padding-left:5px">小計</th>
	      </tr>
	      <% current_customer.cart_items.each do |cart_item| %>
	      <tr>
	        <td style="height:60px; padding-left:5px"><%= attachment_image_tag(cart_item.item, :image, :fill, 50, 50) %> <%= cart_item.item.name %></td>
	        <td style="padding-left:5px">¥<%= cart_item.item.price_with_tax %></td>
	        <td style="padding-left:5px"><%= cart_item.quantity %></td>
	        <td style="padding-left:5px">¥<%= cart_item.item.price_with_tax * cart_item.quantity %></td>
	       </tr>
	      <% end %>
	    </table>
	</dev>
   </div>
   <div class="row">
    <div class="col-xs-3">
      <table class="table-bordered payment_detail">
        <tr>
          <th style="width:120px; height:50px; padding-left:5px", bgcolor="#EEEEEE">送料</th>
          <th style="width:120px; height:50px; padding-left:5px">¥<%= @carriage %></th>
        </tr>
        <tr>
          <th style="width:120px; height:50px; padding-left:5px", bgcolor="#EEEEEE">商品合計</th>
          <th style="width:120px; height:50px; padding-left:5px">¥<%= @total %></th>
        </tr>
        <tr>
          <th style="width:120px; height:50px; padding-left:5px", bgcolor="#EEEEEE">請求金額</th>
          <th style="width:120px; height:50px; padding-left:5px">¥<%= @bill %></th>
        </tr>
      </table>
    </div>
   </div>

   <div class="row">
   	    <div class="col-xs-offset-1 col-xs-10">
			<h4 class="payment_and_address">支払方法</h4>
			<%= @value %><br>
			<h4 class="payment_and_address">お届け先</h4>
			<%=	@order.ship_postal_code %>
			<%= @order.ship_address %>
			<%= @order.ship_name %>
	    </div>
	</div>

	<div class="row">
		<div class="col-xs-offset-4 col-xs-4">
			<%= form_with(model:@order, url: customers_orders_path, method: "POST", local: true ) do |f| %>
				<%= f.hidden_field :payment_informantion, value:@order.payment_informantion %>
				<%= f.hidden_field :customer_id, value:current_customer.id %>
				<%= f.hidden_field :ship_postal_code, value:@order.ship_postal_code %>
				<%= f.hidden_field :ship_address, value: @order.ship_address %>
				<%= f.hidden_field :ship_name, value: @order.ship_name %>
				<%= f.hidden_field :bill, value: @bill %>
				<%= f.hidden_field :carriage, value: @carriage %>
				<%= f.hidden_field :order_status, value: 0 %>
        		<%= f.submit "購入を確定する" , class: "btn btn-primary purchase_fixing-btn"%>
   		    <% end %>
   		</div>
   	</div>

<%= render 'layouts/footer' %>